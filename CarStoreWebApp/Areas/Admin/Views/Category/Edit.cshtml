
@model CarStoreWebApp.Models.Category

<form asp-action="Edit" asp-controller="Category" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Имя категории</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="form-control btn" />
        </div>
    </div>

</form>


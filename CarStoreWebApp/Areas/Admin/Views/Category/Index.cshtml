
@model List<CarStoreWebApp.Models.Category>
@{
    ViewData["Title"] = "CarStoer";
}

<a asp-action="Add" asp-controller="Category">Добавить</a>
<table class="table table-active table-bordered table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>Название</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.Name</td>               
                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@x.Id" id="Delete">Удалить</a> <a asp-action="Edit" asp-controller="Category" class="btn btn-primary" asp-route-id="@x.Id">Изменить</a></td>
            </tr>
        }
    </tbody>
</table>

